<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP2Xamarin.Views.Home" Title="Home">
    <ContentPage.Content>
        <StackLayout Spacing="0">
            <StackLayout Style="{StaticResource head}" >
                <Label TextColor="#3a3a3a" Text="Bienvenue" Style="{StaticResource headLabel}"/>
            </StackLayout>
            <StackLayout Style="{StaticResource body}" >
                <StackLayout HeightRequest="210" HorizontalOptions="Center" >
                    <Image Source="logo2.png" Margin="0,0,0,10"/>
                </StackLayout>
                <Button Text="DEMARRER" Style="{StaticResource bodyButton}" Clicked="Button_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>